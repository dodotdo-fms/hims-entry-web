{
    "extends": ["airbnb-base/legacy"],

    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "module",
        "ecmaFeatures": {
            "globalReturn": false,
            "impliedStrict": true
        }
    },

    "env": {
        "browser": true
    },

    "rules": {
        "strict": 0,
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "no-param-reassign": 0,
        "no-restricted-syntax": 0,
        "no-unused-vars": 1,
        "no-eval": 2,
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "func-names": 0,
        "no-underscore-dangle": 0,
        "no-use-before-define": 0,
        "wrap-iife": [1, "any"]
    }
}
